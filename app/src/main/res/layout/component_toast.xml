<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingStart="@dimen/am_activity_horizontal_margin_small"
    android:paddingEnd="@dimen/am_activity_horizontal_margin_small"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/shape_toast"
    android:paddingTop="@dimen/am_activity_vertical_margin_small"
    android:paddingBottom="@dimen/am_activity_vertical_margin_small"
    android:gravity="center"
    android:orientation="horizontal">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textToast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/am_text_small" />

</LinearLayout>